# Juego de fantasmas
from random import randint
print("Juego de fantasmas")
te_sientes_valiente = True
puntos = 0
while te_sientes_valiente:
    puerta_fantasma = randint (1, 3)
    print("Tres puertas ante ti...")
    print("Un fantasma detrás de una.")
    print("¿Qué puerta abres?")
    puerta = input("¿1, 2 o 3?")
    puerta_num = int(puerta)
    if puerta_num == puerta_fantasma:
        print("¡FANTASMA!")
        te_sientes_valiente = False
    else:
        print("¡No hay fantasma!")
        print("Entras a la habitación siguiente.")
        puntos = puntos + 1
print("¡Huye!")
print("¡Fin del juego! Tu puntuación es", puntos)

#Proyecto Juego de fantasmas del libro Introducción a la programación informática
